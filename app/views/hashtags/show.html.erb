 <div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Список вопросов с хештегом #<%= @hashtag.text %></h1>
  </div>
    <div class="flex-wrapper">
      <div class="buffer-both width-1-4">
        <% @hashtags.each do |hashtag| %>
          <div class="buffer-both text-lead">
            <%= link_to"##{hashtag.text}", hashtag_path(hashtag.text) %>
          </div>
        <% end %>
      </div>

      <div class="flex-all-width">
        <div class="user-questions buffer-both">
          <div>
            <% @questions.each do |question| %>
              <%= link_to "@#{question.user.username}", user_path(question.user) %>
              <%= render partial: 'questions/question', object: question %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

